<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="account.tax_groups_totals" >
            <!--
                Generic template to display a list of tax groups with the related amounts.

                ARGUMENTS:
                - tax_totals: dict in the form generated by account.move's _get_tax_totals.
                - subtotal_to_show: The subtotal we need to render the groups from
            -->
            <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                <tr>
                    <t t-if="len(tax_totals['groups_by_subtotal'][subtotal_to_show]) &gt; 1">
                        <td style="padding-left: 20px; background-color: white !important; border: 0px solid">
                            <strong>!-&gt;</strong> <span t-esc="amount_by_group['tax_group_name']"/>
                            <span class="text-nowrap"> on
                                <t t-esc="amount_by_group['formatted_tax_group_base_amount']"/>
                            </span>
                        </td>
                        <td class="text-right o_price_total" style="background-color: white !important;">
                            <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']"/>
                        </td>
                    </t>
                    <t t-else="">
                        <td style="padding-left: 20px; background-color: white !important;"> <strong>!-&gt;</strong> <span class="text-nowrap" t-esc="amount_by_group['tax_group_name']"/></td>
                        <td class="text-right o_price_total" style="background-color: white !important;">
                            <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']"/>
                        </td>
                    </t>
                </tr>
            </t>
        </template>
</odoo>