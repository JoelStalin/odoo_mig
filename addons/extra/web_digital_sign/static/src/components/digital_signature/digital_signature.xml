<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="web_digital_sign.DigitalSignature" owl="1">
        <div class="o_field_signature">
            <div t-if="!props.readonly" class="d-flex justify-content-between align-items-center mb-1">
                <strong>Draw your signature</strong>
                <button class="btn btn-secondary btn-sm" t-on-click="clearSignature">Clear</button>
            </div>
            <div class="signature_pad_container bg-light border">
                <canvas t-ref="signatureCanvas" style="width: 550px; height: 150px; max-width: 100%; cursor: crosshair;" class="signature_canvas"/>
            </div>
             <div t-if="props.readonly and state.isEmpty" class="text-muted fst-italic">
                No signature.
            </div>
        </div>
    </t>
</templates>
