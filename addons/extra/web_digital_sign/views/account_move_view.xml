<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    
   <record id="inherited_account_move_form" model="ir.ui.view">
        <field name="name">inherited.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <label for="digital_signature" string="Firma" class="oe_edit_only" 
                    attrs="{'invisible': [('is_automatic_invoice', '=', True)]}"/>
                <h2 attrs="{'invisible': [('is_automatic_invoice', '=', True)]}">
                    <field name="digital_signature" widget="signature" 
                        attrs="{'required': [('is_automatic_invoice', '=', False)]}"/>
                </h2>
                <p style="color: red" 
                attrs="{'invisible': [('is_automatic_invoice', '=', True)]}">
                    Estoy de acuerdo que esta factura no tiene nada que ver con las cargas de EXO
                </p>
            </xpath>
        </field>
    </record>

</odoo>
